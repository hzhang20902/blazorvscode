        </div>
    </div>
</div>

     <script>
        document.addEventListener("DOMContentLoaded", function() {
            const consentPopup = document.getElementById("consent-popup");
            const consentButton = document.getElementById("consent-button");
            const overlay = document.getElementById("overlay");

            consentButton.addEventListener("click", function() { // enable
                consentPopup.style.display = "none";
                overlay.style.display = "none";
                document.querySelector(".home-page-background").style.pointerEvents = "auto";
            });

            consentPopup.style.display = "block"; //disable
            overlay.style.display = "block";
            document.querySelector(".home-page-background").style.pointerEvents = "none";
        });
    </script>